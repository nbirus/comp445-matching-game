<Page
    x:Class="LightsOut___Universal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LightsOut___Universal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel RequestedTheme="Dark" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Canvas x:Name="paintCanvas" Width="500" Height="500" Tapped="paintCanvas_Tapped" 
                RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="0,80" Background="White" />

        <CommandBar>
            <AppBarButton Icon="RepeatAll" Label="New Game" Click="AppBarButtonNewGame_Click" />
            <AppBarButton Icon="Help" Label="About" Click="AppBarButtonAbout_Click"/>
            <AppBarButton Icon="Setting" Label="Settings" Click="AppBarButtonSettings_Click"/>
        </CommandBar>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="0" Stroke="Black" VerticalAlignment="Top" Width="0"/>
    </RelativePanel>
</Page>
